
@using RockRecord.Helper
@model List<RockRecord.Models.Album>
@if (Model.Count>0)
{
    <ul class="itemSlider">
        @foreach (var album in Model)
        {
            <li>
                <div>
                    @Html.AlbumCoverLink(album.Id,120)
                </div>
                <div>
                    @Html.AlbumTitle(album)
                </div>
                <div>
                    @Html.DisplayFor(model=>album.Rating)
                    (@album.Reviews.Count)
                </div>
            </li>
        }
    </ul>
}else{
    <p class="notContent">沒有任何項目</p>
}